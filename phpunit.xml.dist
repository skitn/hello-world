<?xml version="1.0" encoding="UTF-8"?>

<phpunit
  colors="true"
  bootstrap="tests/bootstrap.php">

  <filter>
    <whitelist>
      <directory suffix=".php">src/</directory>
    </whitelist>
  </filter>

  <testsuites>
    <testsuite name="Application Test Suite">
      <directory suffix="Test.php">./tests/</directory>
    </testsuite>
  </testsuites>
</phpunit>
